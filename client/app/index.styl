@import "lib"

html
body
	margin 0
	padding 0
	height 100%
	width 100%
	overflow hidden
	background dark-color-bg1
	color dark-color-text2

body
	font normal 15px sans-serif
	box-sizing border-box
	// touch-action none
	// user-select none
	overflow-y auto

	*
		box-sizing inherit


.header
	background dark-color-bg2
	color dark-color-text0
	display flex
	align-items center
	justify-content space-between
	padding 0 20
	position sticky
	top 0
	box-shadow 0 2px 5px #0009

	em
		font-style normal
		color dark-color-accent




.main
	color dark-color-text0
	padding 0 20

	em
		font-style normal
		color dark-color-accent


.panel
	background dark-color-bg2
	color dark-color-text0
	box-shadow dark-shadow
	display flex
	flex-direction column
	margin 20 auto

	.title
		padding 0 20
		height 50
		border-bottom dark-color-bg1
		display flex
		flex-direction row
		align-items center
		justify-content space-between

		h2
			margin 0

	.content
		flex 1 1 auto
		padding 20
		color dark-color-text1
		overflow auto
