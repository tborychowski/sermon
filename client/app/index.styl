@import "lib"

html
body
	margin 0
	padding 0
	height 100%
	width 100%
	overflow hidden
	background dark-color-bg1
	color dark-color-text0

body
	font normal 15px sans-serif
	box-sizing border-box
	// touch-action none
	// user-select none
	overflow-y auto

	*
		box-sizing inherit

	em
		font-style normal
		color dark-color-accent

	h1, h2
		font-weight 200

	h2
		margin 0

	h1 small
		font-size 19px
		vertical-align middle
		padding 0 10

.header
	background dark-color-bg2
	display flex
	align-items center
	justify-content space-between
	padding 0 20
	position sticky
	top 0
	box-shadow 0 2px 5px #0009


.panel
	background dark-color-bg2
	display flex
	flex-direction column
	margin 1 0 0

	.title
		padding 0 20
		height 50
		border-bottom dark-color-bg1
		display flex
		flex-direction row
		align-items center
		justify-content space-between


	.content
		flex 1 1 auto
		padding 0
		color dark-color-text1
		overflow auto
