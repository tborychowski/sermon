@import "lib"

html
body
	margin 0
	padding 0
	height 100%
	width 100%
	overflow hidden
	background dark-color-bg1
	color dark-color-text0

body
	font normal 15px main-font
	box-sizing border-box
	overflow-y auto

	*
		box-sizing inherit

em
	font-style normal
	color dark-color-accent

h1, h2
	font-weight 200
	margin 0


footer
	background dark-color-bg2
	height 50

.panel
	background dark-color-bg2
	color dark-color-text1
	display flex
	flex-direction column
	margin 1 0 0
