@import "lib"

header
	display flex
	align-items center
	justify-content space-between
	flex-wrap wrap
	padding 15 20

	h1
		display flex
		align-items center


.updated-at
	padding 0 5 0 10
	white-space nowrap


.summary
	display flex
	flex-flow row
	align-items center
	justify-content space-between

	.service-status
		width auto
		padding-right 10
		padding-left 10
		margin 0 0 0 10
		white-space nowrap

	.blink
		animation blinking 2s infinite

	em
		font-weight 400
		padding 0 5 0 0




@keyframes blinking
	0%
		opacity 1
	40%
		opacity 0
	80%
		opacity 1
	100%
		opacity 1
